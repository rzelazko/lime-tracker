{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "npm: firebase-emulator",
      "command": "bash",
      "args": ["-c", ". ~/.nvm/nvm.sh && nvm use && npm run firebase-emulator"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "Starting emulators"
          },
          "endsPattern": {
            "regexp": "Emulator Hub running"
          }
        }
      }
    },
    {
      "type": "shell",
      "label": "npm: start",
      "command": "bash",
      "args": ["-c", ". ~/.nvm/nvm.sh && nvm use && npm run start"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "shell",
      "label": "npm: start-pl",
      "command": "bash",
      "args": ["-c", ". ~/.nvm/nvm.sh && nvm use && npm run start-pl"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "start-pl-with-emulator",
      "dependsOn": ["npm: firebase-emulator", "npm: start-pl"]
    },
    {
      "label": "start-en-with-emulator",
      "dependsOn": ["npm: firebase-emulator", "npm: start"]
    },
    {
      "type": "shell",
      "label": "npm: test",
      "command": "bash",
      "args": ["-c", ". ~/.nvm/nvm.sh && nvm use && npm run test"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    }
  ]
}
